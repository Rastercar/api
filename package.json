    "build:docker": "sudo docker build -t rastercar-api .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:test": "NODE_ENV=test node dist/main",
    "start:prod": "NODE_ENV=production node dist/main",
    "start:homolog": "NODE_ENV=homolog node dist/main",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "yarn test:unit --coverage",
    "test:coverage:open": "google-chrome ./coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.config.js --runInBand",
    "test:e2e-circleci": "jest --config ./test/jest-e2e.config.js --runInBand",
    "test:unit": "jest --config ./test/jest-unit.config.js --max-workers=4",
    "test:unit-circleci": "jest --config ./test/jest-unit.config.js --max-workers=2",
    "prepare": "husky install"
  },
